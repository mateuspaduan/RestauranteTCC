<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inatel.com.br.restaurante.activity.LoginActivity">

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView2"
            android:ems="10"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Senha"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/keep_logged"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/editPassword"
            android:text="Manter-se logado" />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginButton"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:gravity="center"
            android:text="Não está cadastrado? Clique aqui"
            android:textColor="#000000" />

    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Login"
        android:backgroundTint="#003767"
        android:textColor="#FFFFFF"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:onClick="loginBtn"
        android:layout_below="@+id/box"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:id="@+id/progressBar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp"
        android:clickable="false"
        android:background="#88000000">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:textSize="20dp"
        android:textColor="#303F9F"
        android:text="Bem vindo ao FastWaiter!" />

</RelativeLayout>
